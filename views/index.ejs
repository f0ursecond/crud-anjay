<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>crud anjing</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    
</head>

</head>
<body>
    <h1 class="text-center"><%= title %></h1>
    <div class="container">
        
        <table class="table">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">Nama</th>
                <th scope="col">Kelas</th>
                <th scope="col">Jurusan</th>
              </tr>
            </thead>
            <tbody class="table-group-divider">
                <% for(let user of users) { %>
              <tr>    
                <th scope="row"><%= user.id %></th>
                <th scope="row"><%= user.nama %></th>
                <th scope="row"><%= user.kelas %></th>
                <th scope="row"><%= user.jurusan %></th>
              
              </tr>
              <% } %> 
              
            </tbody>
          </table>
          <div class="w-50">
            <form action="/tambah" method="post">
                <th>
                    <input class="form-control form-control-l" type="text" placeholder="No" name="id">
                </th>
                <hr>
                <th>
                    <input class="form-control form-control-l" type="text" placeholder="Nama" name="nama">
                </th>
                <hr>
                <th>
                    <input class="form-control form-control-l" type="text" placeholder="Kelas" name="kelas">
                </th>
                <hr>
                <th>
                    <input class="form-control form-control-l" type="text" placeholder="Jurusan" name="jurusan">
                </th>
                <hr>
                <th>
                    <input class="btn btn-primary" value="Tambahkan" type="submit" />
                </th>
            </form>
          </div>
        
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>